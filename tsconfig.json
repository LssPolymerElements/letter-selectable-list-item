{
  "compilerOptions": {
    "target": "es2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "lib": ["es2017", "dom"],
    "typeRoots": ["types"]
  },
  "compileOnSave": true,
  "include": [
    "bower_components/**/*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "build",
    "node_modules",
    "bower_components/reflect-metadata/"
  ]
}